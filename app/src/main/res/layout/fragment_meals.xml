<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/veganfood"
            android:layout_marginStart="40dp"
            android:contentDescription="@string/CT51" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/CT50"
            android:textColor="@color/pink"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/veganfood"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/CT49" />

    </LinearLayout>
    <TextView
        android:id="@+id/nomeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:text="@string/CT48"
        android:textColor="@color/pink"
        android:textSize="15sp"
        android:textStyle="bold" />
    <ListView
        android:id="@+id/simpleListView"
        android:layout_width="fill_parent"
        android:layout_height="352dp"
        android:divider="#A0A0A0"
        android:dividerHeight="1dp"
        android:listSelector="@color/pink"
        />

    <Button
        android:id="@+id/addMeal"
        style="?android:textAppearanceSmall"

        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/m_shape1"
        android:onClick="goToadd"
        android:text="@string/CT47"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

</LinearLayout>