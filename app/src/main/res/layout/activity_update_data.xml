<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sim.fitwoman.updateData">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Update your Data"
            android:textColor="#f2709c"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText313"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/mcacke"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="48dp" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OR/AND" />

        <EditText
            android:id="@+id/editText3456"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/mmeter"
            android:ems="10"
            android:hint="Height in cm"
            android:inputType="numberDecimal"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="48dp" />

        <Button
            android:id="@+id/button4confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/m_shape1"
            android:text="Confirm"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="140dp" />

        <Button
            android:id="@+id/button5cancelagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/m_shape6"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>